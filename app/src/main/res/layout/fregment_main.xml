<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>


    <Button
        android:id="@+id/tutorial_mode"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="80dp"
        android:text="tutorial mode" />

    <Button
        android:id="@+id/matching_mode"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@+id/tutorial_mode"

        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="80dp"
        android:text="single match" />

    <Button
        android:id="@+id/end_game_mode"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@+id/matching_mode"

        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="80dp"
        android:text="end game mode" />

    <Button
        android:id="@+id/edit_board_mode"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@+id/end_game_mode"

        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="80dp"
        android:text="edit the board" />
</RelativeLayout>